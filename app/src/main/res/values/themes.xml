<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unihelp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/unihelp_second_color</item>
        <item name="colorPrimaryVariant">@color/unihelp_second_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/unihelp_second_color</item>
